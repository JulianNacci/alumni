<header class='header-main'>
  <div class='nav-bar'>
      <div class="navbar-logo">
      <%= link_to root_path do %>
        <%= render 'shared/logo' %>
      <% end %>
      </div>
      <div class='navbar-right'>
        <% if user_signed_in? %>
            <%= react_component 'AvatarNavbar', {
              user: current_user.slice(:github_nickname, :gravatar_url)
              } %>
          <hr>
          <%= image_tag current_user.gravatar_url, class: 'avatar avatar-navbar' %>
          <hr>
          <%= link_to new_resource_path, class: 'plus' do %>
            <i class='mdi mdi-plus'></i>
          <% end %>
        <% else %>
          <%= link_to user_omniauth_authorize_path(:github), class: 'btn-github' do %>
            <%= fa_icon 'github' %> <%= t ".sign_out", default: "Sign in" %>
          <% end %>
        <% end %>
    </div>
  </div>
  <%= react_component 'Headers' %>
</header>
