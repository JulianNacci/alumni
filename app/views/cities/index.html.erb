<div class='cities-list-overlay'>
  <div class='cities-icon-container'>
    <i class='mdi mdi-city'></i>
  </div>
  <div class="cities-list-container">
    <div class="cities-list-title ">
      <h1>Choose a city</h1>
    </div>

    <div class="cities-list">
      <% @cities.each do |city| %>
        <div class="city-item">
          <% if policy(city).show? %>
            <%= link_to city.name, city %>
          <% else %>
            <%= city.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
